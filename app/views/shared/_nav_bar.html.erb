<%= nav_bar static: :top, responsive: true do %>
  <%= menu_group do %>
    <%= menu_item "Tickets", "#" %>
    <%= drop_down "Categories" do %>
      <%= menu_item "Sports", "#" %>
      <%= menu_item "Music", "#" %>
      <%= menu_item "Theater", "#" %>
      <%= menu_item "Family", "#" %>
      <%=  %>
    <% end %>
  <% end %>

  <%= menu_group do %>
    <%= link_to image_tag('white-ticket-48.png', class: "nav-logo"), root_path %>
  <% end %>

  <%= menu_group do %>
    <%= menu_item "Cart", "#" %>
    <% if current_user %>
      <%= drop_down "Account" do %>
        <%= menu_text "Buying" %>
        <%= menu_item "Past Orders", "#" %>
        <%= drop_down_divider %>
        <%= menu_text "Selling" %>
        <%= menu_item "List a Ticket", "#" %>
        <%= menu_item "Current Listings", "#" %>
        <%= menu_item "Past Sales", "#" %>
        <%= drop_down_divider %>
        <%= menu_text "User Account" %>
        <%= menu_item "Manage Account", "#" %>
        <% if current_user.admin? %>
          <%= drop_down_divider %>
          <%= menu_text "Admin" %>
          <%= menu_item "Dashboard", "#" %>
        <% end %>
        <%= drop_down_divider %>
        <%= menu_item "Logout", logout_path, method: :delete %>
      <% end %>
    <% else %>
      <%= menu_item "Login", login_path %>
    <% end %>
  <% end %>
<% end %>
