<h1>Hubstub</h1>

<p>Hi <%= @order.buyer.full_name %></p>

<p>
  Your order has been confirmed! Please see below for details:
</p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Location</th>
      <th>Section</th>
      <th>Row</th>
      <th>Seat</th>
      <th>Delivery</th>
    </tr>
  </thead>
  <tbody>
    <% @order.items.each do |item| %>
    <tr class="event-row">
      <td></td>
      <td>
          <p><%= item.event.month %></p>
          <p><%= item.event.day_of_month %></p>
          <p><%= item.event.day_of_week %></p>
      </td>
      <td class="vert-align"><%= item.event.title %></td>
      <td class="vert-align"><%= item.event.description %></td>
      <td class="vert-align"><%= link_to(item.event.venue.name, venue_path(item.event.venue)) %></td>
      <td class="vert-align"><%= item.section %></td>
      <td class="vert-align"><%= item.row %></td>
      <td class="vert-align"><%= item.seat %></td>
      <td class="vert-align delivery-meth"><%= item.delivery_method %></td>
      <td class="vert-align"><%= item.dollar_amount %></td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
      <tr> <h3>Total: <%="#{number_to_currency((@items.map(&:unit_price).sum)/100.00)}" %></h3> </tr>
  </tfoot>
</table>
