<% if @cart.empty? %>
  Your cart is empty!
<% else %>
  <h2>Your Cart</h2>
  <div class="row">
    <div class="col-lg-10">
      <% @cart.cart_items.each do |key, count| %>
      <% item = Item.find(key) %>
      <a name="<%= item.title %>"></a>
      <div class="category-box row" >
        <h3><%= item.title%></h3> <%= item.description%> <%= number_to_currency(item.unit_price/100) %> Quantity: <%= count %>
        <%= button_to "+", update_item_path(item_id: item.id) %>
        <%= button_to "X", remove_item_path(item_id: item.id), data: { confirm: 'Are you sure you want to remove this item from your cart?' } %>
      </div>
      <% end %>
    </div>
  </div>
<% end %>
