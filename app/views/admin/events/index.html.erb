<div class="row">
  <div class="col-md-3">
    <h3>Events</h3>
  </div>
  <div class="col-md-0 pull-right righter top-button">
    <%= link_to "New Event", new_admin_event_path, class: "btn btn-success" %>
  </div>
</div>

<table class="table table-hover admin-event-table">
  <thead>
    <th>Image</th>
    <th>Title</th>
    <th>Description</th>
    <th>Venue</th>
    <th>Date</th>
    <th>Category</th>
    <th>Status</th>
    <th></th>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= image_tag event.image.img.url(:event_manage_list), class: "manage-item-img" %></td>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.venue.name %> <%=event.venue.location %></td>
        <td><%= "event.category.name" %></td>
        <td><%= event.approved ? "approved" : "pending"%></td>
        <td><%= link_to "Edit", edit_admin_event_path(event), class: "btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
